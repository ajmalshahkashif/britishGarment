@model CommonModule.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout_NoMenu.cshtml";
}

<div class="card shadow-lg p-4 border-0 rounded-3" style="width: 100%; max-width: 400px;">
    <h2 class="text-center mb-4">Login</h2>
    <form asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter your username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
    </form>
    <p class="text-center mt-4">
        <a asp-action="ForgotPassword" class="text-decoration-none">Forgot your password?</a> |
        <a asp-action="SignUp" class="text-decoration-none">Sign Up</a>
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
