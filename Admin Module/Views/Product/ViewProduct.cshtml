@model Admin_Module.Models.ProductViewModel

@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div class="form-group">
    <label>Product Name:</label>
    <p>@Model.Name</p>
</div>

<div class="form-group">
    <label>Description:</label>
    <p>@Model.Description</p>
</div>

<div class="form-group">
    <label>Price:</label>
    <p>@Model.Price.ToString("C")</p> <!-- Format as currency -->
</div>

<div class="form-group">
    <label>Category:</label>
    <p>@Model.ProductCategoryName</p> <!-- Display the category name -->
</div>

<div class="form-group">
    <label>Active:</label>
    <p>@Model.isActive ? "Yes" : "No"</p>
</div>

<div>
    @Html.ActionLink("Back to List", "AllProducts", new { @class = "btn btn-link" })
</div>
