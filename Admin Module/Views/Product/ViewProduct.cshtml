@model Admin_Module.Models.ProductEditViewModel
@{
    ViewBag.Title = "View Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-md-6">
                    <h1 class="m-0 text-dark">Product Details</h1>
                </div>
                <div class="col-md-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">@Html.ActionLink("All Products", "AllProducts", "Product")</li>
                        <li class="breadcrumb-item active">Product Details</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
     <div class="row">
        <div class="col-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- One Row Name,Category -->
        <div class="mb-3 row">
            <label class="col-md-1 col-form-label">Product Name</label>
            <div class="col-md-3">
                <p class="form-control-plaintext">@Model.Name</p>
            </div>
                <div class="col-md-2"></div>
            <label class="col-md-1 col-form-label">Category</label>
            <div class="col-md-3">
                <p class="form-control-plaintext">@Model.ProductCategoryName</p>
            </div>
        </div>

            <!-- Two Row Price,Gender -->
         <div class="mb-3 row">
            <label class="col-md-1 col-form-label">Price</label>
            <div class="col-md-3">
                <p class="form-control-plaintext">@Model.Price</p>
            </div>
                <div class="col-md-2"></div>
                <label class="col-md-1 col-form-label">Gender</label>
                <div class="col-md-3">
                    <p class="form-control-plaintext">@Model.Gender</p>
                </div>
         </div>

            <!-- three Row Weight,Discount -->
            <div class="mb-3 row">
                <label class="col-md-1 col-form-label">Weight (kg)</label>
                <div class="col-md-3">
                    <p class="form-control-plaintext">@Model.Weight</p>
                </div>
                <div class="col-md-2"></div>

                <label class="col-md-1 col-form-label">Discount</label>
                <div class="col-md-3">
                    <p class="form-control-plaintext">@Model.Discount%</p>
                </div>
            </div>

            <!-- Four Row Length,Height -->
            <div class="mb-3 row">
                <label class="col-md-1 col-form-label">Length (cm)</label>
                <div class="col-md-3">
                    <p class="form-control-plaintext">@Model.Length</p>
                </div>
                <div class="col-md-2"></div>
                <label class="col-md-1 col-form-label">Height (cm)</label>
                <div class="col-md-3">
                    <p class="form-control-plaintext">@Model.Height</p>
                </div>
            </div>

            <!-- Five Row Stock,Status -->
            <div class="mb-3 row">
                <label class="col-md-1 col-form-label">In Stock</label>
                <div class="col-md-3">
                    <p class="form-control-plaintext">@Model.InStock</p>
                </div>
                <div class="col-md-2"></div>
                <label class="col-md-1 col-form-label">Status</label>
                <div class="col-md-3">
                    <p class="form-control-plaintext">@(Model.isActive ? "Active" : "InActive") </p>
                </div>
            </div>

            <!-- Six Row Inside your view, you can now display the selected sizes and selected colors  as follows: -->
            <div class="mb-3 row">
                <label class="col-md-1 col-form-label">Sizes</label>
                <div class="col-md-3">
                    <p class="form-control-plaintext">
                        @string.Join(", ", ViewBag.SelectedSizeNames) <!-- Display selected size names -->
                    </p>
                </div>
                <div class="col-md-2"></div>
                <label class="col-md-1 col-form-label">Colors</label>
                <div class="col-md-3">
                    <p class="form-control-plaintext">
                        @string.Join(", ", ViewBag.SelectedColorNames) <!-- Display selected color names -->
                    </p>
                </div>
            </div>

            <!-- Seven Row Description -->
            <div class="mb-3 row">
                <label class="col-md-1 col-form-label">Description</label>
                <div class="col-md-10">
                    <p class="form-control-plaintext">@Model.ShortDescription</p>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-md-1 col-form-label">Images</label>
                <div class="col-md-10" id="imagePreviewContainer" style="display:flex; flex-wrap:wrap; gap:10px;">
                    <!-- Image previews will be shown here -->
                    @if (Model.ProductImages != null && Model.ProductImages.Count > 0)
                    {

                        foreach (var image in Model.ProductImages)
                        {
                            var base64Image = Convert.ToBase64String(image.Image);
                            <img src="data:image/jpeg;base64,@base64Image" style="width:100px; height:auto; margin:5px;" />
                        }
                    }
                    else
                    {
                        <p>No images available.</p>
                    }
                </div>
            </div>

    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "AllProducts", new { @class = "btn btn-link" })
</div>

