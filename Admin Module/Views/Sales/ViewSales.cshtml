@model Admin_Module.Models.SalesViewModel

@{
    ViewBag.Title = "View Sale Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-md-6">
                <h1 class="m-0 text-dark">Sale Details</h1>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">@Html.ActionLink("All Sales", "AllSales", "Sales")</li>
                    <li class="breadcrumb-item active">Sale Details</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Sale ID</label>
            <div class="col-md-6">
                <p class="form-control-plaintext">@Model.SaleId</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Customer Name</label>
            <div class="col-md-6">
                <p class="form-control-plaintext">@Model.CustomerName</p>
            </div>
        </div>


        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Sale Date</label>
            <div class="col-md-6">
                <p class="form-control-plaintext">@Model.SaleDate.ToString("dd-MM-yyyy")</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Total Amount</label>
            <div class="col-md-6">
                <p class="form-control-plaintext">@Model.TotalAmount.ToString("C")</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Payment Method</label>
            <div class="col-md-6">
                <p class="form-control-plaintext">@Model.PaymentMethod</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Created At</label>
            <div class="col-md-6">
                <p class="form-control-plaintext">@Model.CreatedAt?.ToString("dd-MM-yyyy")</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Updated At</label>
            <div class="col-md-6">
                <p class="form-control-plaintext">@Model.UpdatedAt?.ToString("dd-MM-yyyy")</p>
            </div>
        </div>

    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "AllSales", new { @class = "btn btn-link" })
</div>

<script>
    $(document).ready(function () {
        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 2000);
    });
</script>
