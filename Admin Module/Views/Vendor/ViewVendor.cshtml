@model Admin_Module.Models.VendorEditViewModel

@{
    ViewBag.Title = "View Vendor Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-md-6">
                    <h1 class="m-0 text-dark">Vendor Details</h1>
                </div>
                <div class="col-md-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">@Html.ActionLink("All Vendors", "AllVendor", "Vendor")</li>
                        <li class="breadcrumb-item active">Vendor Details</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3 row">
                <label class="col-md-2 col-form-label">First Name</label>
                <div class="col-md-6">
                    <p class="form-control-plaintext">@Model.FirstName</p>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-md-2 col-form-label">Last Name</label>
                <div class="col-md-6">
                    <p class="form-control-plaintext">@Model.LastName</p>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-md-2 col-form-label">Email</label>
                <div class="col-md-6">
                    <p class="form-control-plaintext">@Model.Email</p>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-md-2 col-form-label">Mobile No</label>
                <div class="col-md-6">
                    <p class="form-control-plaintext">@Model.MobileNo</p>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-md-2 col-form-label">Address</label>
                <div class="col-md-6">
                    <p class="form-control-plaintext">@Model.Address</p>
                </div>
            </div>

            
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AllVendor", new { @class = "btn btn-link" })
</div>

<script>
    $(document).ready(function () {
        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 2000);
    });
</script>
