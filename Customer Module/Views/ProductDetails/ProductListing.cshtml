    @model IEnumerable<CommonModule.DB.Product>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="container">
        <div class="row margin-bottom-40">
            <!-- BEGIN SALE PRODUCT -->
            <div class="col-md-12 sale-product">
                <h2>Product List</h2>

                <!-- Product Grid Row -->
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
                            <div class="product-item">
                                <div class="pi-img-wrapper">
                                    @if (product.ProductImages.Any())
                                    {
                                        <img src="data:image/png;base64,@(Convert.ToBase64String(product.ProductImages.First().Image))"
                                             class="img-responsive" alt="@product.Name" style="height: 250px" />
                                    }
                                    else
                                    {
                                        <!-- Fallback image if no image is available -->
                                        <img src="~/image/default-product.png" class="img-responsive" alt="@product.Name" style="height: 250px" />
                                    }
                                </div>
                                <h3><a href="@Url.Action("ViewProductDetails", "ProductDetails", new { productId = product.ProductId })">@product.Name</a></h3>
                                <div class="pi-price">$29.00</div>
                                <a href="javascript:;" class="btn btn-default add2cart">Add to cart</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- END SALE PRODUCT -->
        </div>
    </div>
</div>


<!-- Optional: Include Bootstrap CSS and JS if not already included -->
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
